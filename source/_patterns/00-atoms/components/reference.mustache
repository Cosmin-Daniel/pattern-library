
<div class="reference">
  {{#titleLink}}
    <a href="{{titleLink}}" class="reference__title">{{title}}</a>
  {{/titleLink}}
  {{^titleLink}}
    <div class="reference__title">{{title}}</div>
  {{/titleLink}}

  {{#hasAuthors}}
    <ul class="reference__authors_list">
  {{/hasAuthors}}
    {{#authors}}
      <li class="reference__authors_list_item">
        {{#authorLink}}
          <a href="{{authorLink}}" class="reference__authors_link">{{authorName}}</a>
        {{/authorLink}}
        {{^authorLink}}
          <span class="reference__authors_link">{{authorName}}</span>
        {{/authorLink}}
      </li>
    {{/authors}}

  {{#hasAuthors}}
    </ul>
  {{/hasAuthors}}

  {{#origin}}
    <div class="reference__origin">{{origin}}</div>
  {{/origin}}

  {{#hasAbstracts}}
    <div class="reference__abstracts">
  {{/hasAbstracts}}
  {{#abstracts}}
    <a href="{{link}}" class="reference__abstracts_link">{{name}}</a>
  {{/abstracts}}

  {{#hasAbstracts}}
    </div>
  {{/hasAbstracts}}
</div>
